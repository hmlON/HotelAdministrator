<div class="col-lg-6 col-lg-offset-3">
  <h3 class="text-center">Reviews</h3>
    <%= render 'form' %>
  </div>
</div>

<div class="box">
  <div class="col-lg-8 col-lg-offset-2">
    <% @reviews.each do |review| %>
      <div class="review">
        <%= render review %>
      </div>
    <% end %>
  </div>
</div>
