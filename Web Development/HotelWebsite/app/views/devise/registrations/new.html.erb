<div class="col-lg-6 col-lg-offset-3">
  <h3 class="text-center">Sign up</h3>

  <%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name), layout: :horizontal) do |f| %>
    <%= devise_error_messages! %>

      <%= f.email_field :email, autofocus: true, required: true %>
      <%= f.password_field :password, autocomplete: "off", help: "6 characters minimum", required: true %>
      <%= f.password_field :password_confirmation, autocomplete: "off", required: true %>
      <%= f.phone_field :phone, required: true %>
      <%= f.text_field :name, required: true %>
      <div class="text-center"><%= f.submit "Sign up" , class: 'btn btn-lg btn-primary'%></div>
  <% end %>

  <hr>

  <%= render "devise/shared/links" %>
</div>
